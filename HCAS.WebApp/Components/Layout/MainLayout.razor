@using MudBlazor
@inherits LayoutComponentBase

<MudAppBar>
	<MudIconButton Icon="@Icons.Material.Filled.Menu"
				   Color="Color.Inherit"
				   Edge="Edge.Start"
				   OnClick="@((e) => DrawerToggle())" />
</MudAppBar>
<MudLayout Style="margin-top:65px;">

	<MudDrawer @bind-Open="@_drawerOpen">
		<MudNavMenu Class="mud-width-full">
			<MudText Typo="Typo.h6" Class="px-4">HCAS</MudText>
			<MudText Typo="Typo.body2" Class="px-4 mud-text-secondary">Navigation</MudText>
			<MudDivider Class="my-2" />

			<MudNavLink Href="/" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>
			<MudNavLink Href="/Staff" Icon="@Icons.Material.Filled.Groups">Staff</MudNavLink>
			<MudNavLink Href="/Doctor" Icon="@Icons.Material.Filled.MedicalServices">Doctor</MudNavLink>
			<MudNavLink Href="/DoctorSchedule" Icon="@Icons.Material.Filled.EventAvailable">Doctor Schedule</MudNavLink>
			<MudNavLink Href="/Appointment" Icon="@Icons.Material.Filled.Assignment">Appointment</MudNavLink>
			<MudNavLink Href="/Patient" Icon="@Icons.Material.Filled.LocalHospital">Patient</MudNavLink>
		</MudNavMenu>

	</MudDrawer>

	<MudMainContent Style="padding-top: 10px;">
		<MudContainer MaxWidth="MaxWidth.Large">
			@Body
		</MudContainer>
	</MudMainContent>
</MudLayout>

@code {
	bool _drawerOpen = true;

	void DrawerToggle()
	{
		_drawerOpen = !_drawerOpen;
	}
}

<!-- Error UI -->
<div id="blazor-error-ui">
	An unhandled error has occurred.
	<a href="" class="reload">Reload</a>
	<a class="dismiss">🗙</a>
</div>

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />